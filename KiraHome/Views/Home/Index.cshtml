@{
    ViewData["Title"] = "Home Page";
}


    <div class="row">

        <h1 class="text-center">BIENVENIDO A LA CASA INTELIGENTE KIRA HOME</h1>

    </div>
<hr />

<div class="row" id="zones"></div>

@section Scripts {

<script>

    $(document).ready(function () {

        $.get('http://' + appSettings.serverUrl + '/api/zones/' + appSettings.userId, function (data) {

            for (var i = 0; i < data.length; i++) {

                var html = "";

                html += '<div class="col-lg-4">';
                html += '<div class="card" style="width: 18rem;">';
                html += '<a href="Zones/Devices/' + data[i].id + '">';
                html += '<img src="' + data[i].icon + '" class="card-img-top" alt="' + data[i].name + '" width="300" height="300">';
                html += '</a>';
                html += '<div class="card-body">';
                html += '<a href="Zones/Devices/' + data[i].id + '">';
                html += '<p class="card-text"><h3 class="text-center">' + data[i].name + '</h3></p>';
                html += '</a>';
                html += '</div></div></div>';

                $('#zones').append(html);

            }
        });


    })


</script>

}